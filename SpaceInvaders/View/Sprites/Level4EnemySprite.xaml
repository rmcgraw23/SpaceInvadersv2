<local:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.Level4EnemySprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="33"
    d:DesignWidth="50"
    Height="33"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="EnemyShipColor" Color="Red" />
    </UserControl.Resources>

    <Canvas>
        <local:Level3EnemySprite/>
        <Rectangle Width="6" Height="2" Fill="{StaticResource EnemyShipColor}" Canvas.Left="12" Canvas.Top="16" />
        <Rectangle Width="3" Height="2" Fill="{StaticResource EnemyShipColor}" Canvas.Left="13.5" Canvas.Top="18" />
        <Rectangle Width= "2" Height="3" Fill="{StaticResource EnemyShipColor}" Canvas.Left="14" Canvas.Top="20" />

        <Rectangle Width="6" Height="2" Fill="{StaticResource EnemyShipColor}" Canvas.Left="32" Canvas.Top="16" />
        <Rectangle Width="3" Height="2" Fill="{StaticResource EnemyShipColor}" Canvas.Left="33.5" Canvas.Top="18" />
        <Rectangle Width= "2" Height="3" Fill="{StaticResource EnemyShipColor}" Canvas.Left="34" Canvas.Top="20" />

    </Canvas>
</local:BaseSprite>
