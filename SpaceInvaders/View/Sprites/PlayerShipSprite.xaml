<local:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.PlayerShipSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="33"
    d:DesignWidth="50"
    Height="33"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PlayerShipColor" Color="Blue" />
    </UserControl.Resources>

    <Canvas>
        <Rectangle Width="50" Height="20" Canvas.Top="13" Fill="{StaticResource PlayerShipColor}" />
        <Rectangle Width="40" Height="5" Canvas.Top="8" Canvas.Left="5" Fill="{StaticResource PlayerShipColor}" />
        <Rectangle Width="8" Height="8" Canvas.Left="21" Fill="{StaticResource PlayerShipColor}" />
    </Canvas>
</local:BaseSprite>